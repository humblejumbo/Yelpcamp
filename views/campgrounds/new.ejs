<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">ADD A NEW CAMPGROUND</h1>
        <div class="container" style="width:30% ; margin:25px auto">
    
       <form action='/campgrounds' method='post' enctype="multipart/form-data" >
        <div class="form-group">
            <input type="text" class="form-control" name="campground[name]" placeholder="enter name">
        </div>
        <!-- <div class="form-group">
            <input type="text" class="form-control" name="campground[img]" placeholder="enter image url">
        </div>
        <div class="form-group">
            OR
        </div> -->
        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" id="image" name="campground[image]" accept="image/*" required>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id='txtautocomplete' name="campground[location]" placeholder='enter location' >
        </div>
        <div class="form-group">
            <textarea class="form-control" name="campground[description]" placeholder="description" rows="4"></textarea>
        </div>
        <div class="form-group">
             <button class="btn btn-primary btn-lg btn-block text-center">Create</button>
        </div>
   
        </form>

         <a href='/campgrounds'>GO BACK</a>
 
        </div>
    </div>

</div>

<script>
    //GOOGLE PLACES AUTOCOMPLETE
    function initialize()
    {
        var input=document.getElementById("txtautocomplete");
        var options={
            types:['geocode'],
            componentRestricitions:{country:'in'}
        }
        autocomplete=new google.maps.places.Autocomplete(input,options);
        google.maps.event.addListener(autocomplete, 'place_changed', function () {
		place = autocomplete.getPlace();
		lat=place.geometry.location.lat();
        lng=place.geometry.location.lng();
        });
    } 
</script>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCsHRIlyGXttltN9ul3Lytrhixq9Rj4p5s&libraries=places&callback=initialize" async defer></script>
