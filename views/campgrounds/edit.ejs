<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%=camp.name %> Details </h1>
        <div class="container" style="width:30% ; margin:25px auto">
    
       <form action='/campgrounds/<%=camp._id%>?_method=put' method='post' >
         
        <div class="form-group">
            <input type="text" class="form-control" name="campground[name]" value="<%= camp.name %>" >
        </div>
        
        <div class="form-group">
            <input type="text" class="form-control" name="campground[img]" value="<%= camp.img %>" >
        </div>
        
        <div class="form-group">
            <input type="text" class="form-control" name="campground[description]" value="<%= camp.description %>" >
        </div>
      
        <div class="form-group">
             <button class="btn btn-success btn-lg btn-block text-center">Update</button>
        </div>
   
        </form>

         <a href='/campgrounds/<%=camp._id%>' >GO BACK</a>
 
        </div>
    </div>

</div>


<% include ../partials/footer %>