<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Add a New Comment on <%=camp.name %> </h1>
        <div class="container" style="width:30% ; margin:25px auto">
    
       <form action='/campgrounds/<%=camp._id%>/comments' method='post' >
         
        <div class="form-group">
            <textarea class="form-control" name="comment[txt]" placeholder="comment" rows="2"></textarea>
        </div>
      
        <div class="form-group">
             <button class="btn btn-primary btn-lg btn-block text-center">Add</button>
        </div>
   
        </form>

         <a href='/campgrounds/<%=camp._id%>' >GO BACK</a>
 
        </div>
    </div>

</div>


<% include ../partials/footer %>