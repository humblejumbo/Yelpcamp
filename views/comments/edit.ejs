<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit Your Comment </h1>
        <div class="container" style="width:30% ; margin:25px auto">
    
       <form action='/campgrounds/<%=camp_id%>/comments/<%=comment._id %>?_method=put' method='post' >
         
        <div class="form-group">
            <input type="text" class="form-control" name="comment[txt]" value="<%=comment.txt%>" >
        </div>
      
        <div class="form-group">
               <button class="btn btn-success btn-lg btn-block text-center">Update</button> 
        </div>
   
        </form>

         <a href='/campgrounds/<%=camp_id %>' >GO BACK</a>
 
        </div>
    </div>

</div>




